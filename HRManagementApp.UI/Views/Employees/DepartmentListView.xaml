<UserControl x:Class="HRManagementApp.UI.Views.DepartmentListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl x:Name="DepartmentItemsControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="12" 
                            Margin="0,0,20,20" Padding="25"
                            Width="350" MinHeight="280">

                        <Border.Effect>
                            <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- TÃªn phÃ²ng ban -->
                            <TextBlock Grid.Row="0" Text="{Binding TenPhongBan}" 
                                       FontSize="20" FontWeight="Bold" Foreground="#1F2937"
                                       Margin="0,0,0,15"/>

                            <!-- TrÆ°á»Ÿng phÃ²ng -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                <TextBlock Text="TrÆ°á»Ÿng phÃ²ng" FontSize="13" Foreground="#6B7280" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding TruongPhong}" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937"/>
                            </StackPanel>

                            <!-- Sá»‘ nhÃ¢n viÃªn -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                <TextBlock Text="Sá»‘ nhÃ¢n viÃªn" FontSize="13" Foreground="#6B7280" Margin="0,0,0,4"/>
                                <TextBlock FontSize="16" Foreground="#2563EB" FontWeight="SemiBold">
                                    <Run Text="{Binding SoNhanVien}"/>
                                    <Run Text=" ngÆ°á»i"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- MÃ´ táº£ -->
                            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                                <TextBlock Text="MÃ´ táº£" FontSize="13" Foreground="#6B7280" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding MoTa}" 
                                           FontSize="14" Foreground="#4B5563" 
                                           TextWrapping="Wrap"
                                           LineHeight="20"/>
                            </StackPanel>

                            <!-- Spacer -->
                            <Grid Grid.Row="4"/>

                            <!-- Buttons -->
                            <Grid Grid.Row="5" VerticalAlignment="Bottom">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- NÃºt ThÃªm nhÃ¢n viÃªn (Full width) -->
                                <Button Grid.Row="0" Content="+ ThÃªm nhÃ¢n viÃªn"
                                        Background="#10B981" Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,10" FontSize="14" FontWeight="SemiBold"
                                        Cursor="Hand"
                                        Tag="{Binding MaPhongBan}"
                                        Click="BtnAddEmployee_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="8" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#059669"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- Row 2: NÃºt Sá»­a vÃ  Xem -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- NÃºt Sá»­a -->
                                    <Button Grid.Column="0" Content="âœï¸ Sá»­a"
                                            Background="White" Foreground="#1F2937"
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Padding="15,10" FontSize="14" FontWeight="SemiBold"
                                            Cursor="Hand"
                                            Tag="{Binding MaPhongBan}"
                                            Click="BtnEdit_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="8" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <!-- NÃºt Xem -->
                                    <Button Grid.Column="2" Content="ðŸ‘ Xem"
                                            Background="White" Foreground="#1F2937"
                                            BorderBrush="#E5E7EB" BorderThickness="1"
                                            Padding="15,10" FontSize="14" FontWeight="SemiBold"
                                            Cursor="Hand"
                                            Tag="{Binding MaPhongBan}"
                                            Click="BtnView_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="8"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F9FAFB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>