<Window x:Class="HRManagementApp.Views.InfoDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin chi tiết" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        AllowsTransparency="False"

        WindowStyle="None"
        ResizeMode="NoResize">

    <Border Background="#F5F7FA" CornerRadius="16">
        

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ✅ HEADER -->
            <Border Grid.Row="0" Background="#1F2937" CornerRadius="16,16,0,0" Padding="30,20">
                <Grid>
                    <StackPanel>
                        <TextBlock x:Name="TxtTitle" Text="THÔNG TIN CHI TIẾT" 
                                   FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="TxtSubtitle" Text="" 
                                   FontSize="16" Foreground="#D1D5DB" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="✕" 
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="35" Height="35"
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            Cursor="Hand"
                            Click="BtnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Width="{TemplateBinding Width}"
                                                    Height="{TemplateBinding Height}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#374151"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- ✅ CONTENT (ScrollViewer cho nội dung dài) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,25">
                <Border Background="White" CornerRadius="12" Padding="30">
                   

                    <!-- ItemsControl để hiển thị danh sách thông tin -->
                    <ItemsControl x:Name="InfoItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Label -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Label}" 
                                               FontSize="14" 
                                               Foreground="#6B7280"
                                               VerticalAlignment="Top"
                                               Margin="0,0,20,0"/>

                                    <!-- Value -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Value}" 
                                               FontSize="15" 
                                               Foreground="{Binding ValueColor}"
                                               FontWeight="{Binding ValueWeight}"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Top"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>

            <!-- ✅ FOOTER -->
            <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" 
                    Background="#1F2937" CornerRadius="0,0,16,16" Padding="30,20">
                <Button Content="Đóng" 
                        Background="Black" Foreground="White"
                        BorderThickness="0"
                        Padding="25,12" FontSize="14" FontWeight="SemiBold"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="BtnClose_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8" 
                                                Padding="{TemplateBinding Padding}"
                                                MinWidth="150">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#374151"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>