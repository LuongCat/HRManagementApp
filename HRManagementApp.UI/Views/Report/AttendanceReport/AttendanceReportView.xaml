                <!-- TABLE -->
                <DataGrid x:Name="DgAttendanceReport"
                          MinHeight="500"
                          Grid.Row="3"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeight="38"
