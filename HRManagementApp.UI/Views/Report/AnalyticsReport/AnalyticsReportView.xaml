<UserControl x:Class="HRManagementApp.UI.Views.Report.AnalyticsReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0 0 0 15">
            <TextBlock Text="Analytics Dashboard"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>

            <TextBlock Text="Biểu đồ tổng hợp dữ liệu nhân sự"
                       FontSize="14"
                       Foreground="#7F8C8D"/>
        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="#E5E5E5"
                BorderThickness="1"
                CornerRadius="6"
                Background="#F7F9FB"
                Padding="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <TextBlock Text="[ Chart Placeholder ]"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Foreground="#95A5A6"
                       FontStyle="Italic"/>
        </Border>

    </Grid>
</UserControl>
