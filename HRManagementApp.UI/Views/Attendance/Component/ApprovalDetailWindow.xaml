<Window x:Class="HRManagementApp.UI.Views.ApprovalDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết đơn từ" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">
    
    <Border Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <TextBlock Text="Chi tiết đơn từ" FontSize="20" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nhân viên:" Foreground="#64748B"/>
                    <TextBlock Grid.Column="1" x:Name="txtEmployee" FontWeight="SemiBold"/>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Loại đơn:" Foreground="#64748B"/>
                    <TextBlock Grid.Column="1" x:Name="txtLoaiDon" FontWeight="SemiBold"/>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Thời gian:" Foreground="#64748B"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="txtDate"/>
                        <TextBlock x:Name="txtTime" Foreground="#64748B" FontSize="12"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Lý do:" Foreground="#64748B"/>
                    <TextBlock Grid.Column="1" x:Name="txtReason" TextWrapping="Wrap"/>
                </Grid>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Người duyệt:" Foreground="#64748B"/>
                    <TextBlock Grid.Column="1" x:Name="txtApprover" FontStyle="Italic"/>
                </Grid>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Trạng thái:" Foreground="#64748B"/>
                    <TextBlock Grid.Column="1" x:Name="txtStatus" FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="pnlActions" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Visibility="Collapsed">
                    <Button Content="Từ chối" Click="BtnReject_Click"
                            Background="#FEF2F2" Foreground="#DC2626" BorderThickness="0"
                            Padding="16,8" Margin="0,0,8,0" FontWeight="SemiBold" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button Content="Duyệt đơn" Click="BtnApprove_Click"
                            Background="#16A34A" Foreground="White" BorderThickness="0"
                            Padding="16,8" FontWeight="SemiBold" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <Button Content="Đóng" Click="BtnClose_Click"
                        Grid.Column="0" HorizontalAlignment="Left"
                        Background="#F1F5F9" Foreground="#64748B" BorderThickness="0"
                        Padding="16,8" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>