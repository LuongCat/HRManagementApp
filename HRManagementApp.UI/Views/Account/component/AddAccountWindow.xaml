<Window x:Class="HRManagementApp.UI.Views.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo tài khoản"
        Height="680"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <!-- 1. Style: Modern TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 2. Style: Modern PasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 3. Style: Modern ComboBox (Đã sửa logic hiển thị) -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Khung viền chung -->
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- TRƯỜNG HỢP 1: Cho phép sửa (IsEditable=True) -> Hiện TextBox -->
                                    <TextBox x:Name="PART_EditableTextBox"
                                             Grid.Column="0"
                                             Style="{StaticResource ModernTextBox}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Padding="0,0,0,0"
                                             Margin="{TemplateBinding Padding}"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Center"
                                             IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource TemplatedParent}}"
                                             Visibility="Hidden"/>

                                    <!-- TRƯỜNG HỢP 2: Không cho sửa (IsEditable=False) -> Hiện ContentPresenter -->
                                    <!-- Đây là phần giúp hiển thị text khi chọn Vai trò -->
                                    <ContentPresenter x:Name="ContentSite"
                                                      Grid.Column="0"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      IsHitTestVisible="False"
                                                      Visibility="Visible"/>

                                    <!-- Nút mũi tên -->
                                    <ToggleButton Grid.Column="1"
                                                  Width="30"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                  Focusable="False">
                                        <Path Data="M7 10l5 5 5-5z"
                                              Fill="#64748B"
                                              Stretch="Uniform"
                                              Width="10"
                                              Height="10"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Popup Dropdown -->
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#E5E7EB"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,4,0,0"
                                        Padding="4"
                                        MinWidth="{Binding ActualWidth, ElementName=border}">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Direction="270" Color="#EEE" Opacity="0.5"/>
                                    </Border.Effect>
                                </Border>
                            </Popup>
                        </Grid>
                        
                        <!-- Triggers để chuyển đổi giữa TextBox và ContentPresenter -->
                        <ControlTemplate.Triggers>
                            <!-- Khi ComboBox cho phép sửa (Chọn Nhân viên) -->
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <!-- Khi ComboBox KHÔNG cho phép sửa (Chọn Vai trò) -->
                            <Trigger Property="IsEditable" Value="False">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 4. Style: Modern Button -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="16">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Tạo tài khoản mới" FontSize="24" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,8"/>
                <TextBlock Text="Điền thông tin để tạo tài khoản người dùng mới" FontSize="13" Foreground="#64748B"/>
            </StackPanel>

            <!-- 2. Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,24">
                <StackPanel>
                    
                    <!-- Tên đăng nhập -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tên đăng nhập" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8">
                            <Run Text="*" Foreground="#DC2626"/>
                        </TextBlock>
                        <TextBox x:Name="txtTenDangNhap" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Chọn nhân viên -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Chọn nhân viên" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8">
                            <Run Text="*" Foreground="#DC2626"/>
                        </TextBlock>

                        <!-- Nhân viên: IsEditable="True" để nhập tìm kiếm -->
                        <ComboBox x:Name="cboNhanVien"
                                  Style="{StaticResource ModernComboBox}"
                                  HorizontalAlignment="Stretch"
                                  IsEditable="True"
                                  IsTextSearchEnabled="False"
                                  StaysOpenOnEdit="True"
                                  TextSearch.TextPath="HoTen"
                                  DisplayMemberPath="HoTen"
                                  SelectedValuePath="MaNV"
                                  KeyUp="cboNhanVien_KeyUp"
                                  LostFocus="cboNhanVien_LostFocus"
                                  SelectionChanged="cboNhanVien_SelectionChanged"/>
                    </StackPanel>

                    <!-- Grid: Phòng ban & SĐT -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Phòng ban" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtPhongBan" Style="{StaticResource ModernTextBox}" IsReadOnly="True" Background="#F3F4F6"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Số điện thoại" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtSDT" Style="{StaticResource ModernTextBox}" IsReadOnly="True" Background="#F3F4F6"/>
                        </StackPanel>
                    </Grid>

                    <!-- Vai trò -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vai trò" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8">
                            <Run Text="*" Foreground="#DC2626"/>
                        </TextBlock>
                        
                        <!-- Vai trò: IsEditable="False" để CHỈ HIỂN THỊ, không cho nhập -->
                        <ComboBox x:Name="cboVaiTro" 
                                  Style="{StaticResource ModernComboBox}" 
                                  IsEditable="False"
                                  HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Mật khẩu -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Mật khẩu" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8">
                            <Run Text="*" Foreground="#DC2626"/>
                        </TextBlock>
                        <PasswordBox x:Name="pwdPassword" Style="{StaticResource ModernPasswordBox}"/>
                    </StackPanel>

                    <!-- Xác nhận mật khẩu -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Xác nhận mật khẩu" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8">
                            <Run Text="*" Foreground="#DC2626"/>
                        </TextBlock>
                        <PasswordBox x:Name="pwdConfirm" Style="{StaticResource ModernPasswordBox}"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <Border x:Name="lblError"
                            Background="#FEF2F2" BorderBrush="#FEE2E2" BorderThickness="1" CornerRadius="8" Padding="12"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠ " Foreground="#DC2626" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtError" Foreground="#DC2626" FontSize="13" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 3. Footer Buttons -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Hủy"
                        Width="100"
                        Click="BtnCancel_Click"
                        Style="{StaticResource ModernButton}"
                        Background="#F1F5F9" Foreground="#64748B"
                        Margin="0,0,12,0"/>
                
                <Button Grid.Column="2"
                        Content="Tạo tài khoản"
                        Width="140"
                        Click="BtnCreate_Click"
                        Style="{StaticResource ModernButton}"
                        Background="#1E293B" Foreground="White"/>
            </Grid>
        </Grid>
    </Border>
</Window>