<Window x:Class="HRManagementApp.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HRManagementApp.UI"
        Title="Login"
        Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F2F4F7">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="CardColor" Color="White"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <DropShadowEffect x:Key="CardShadow"
                          Color="#A0A0A0"
                          BlurRadius="18"
                          ShadowDepth="2"
                          Opacity="0.35"/>
    </Window.Resources>

    <Grid>
        <Border Background="#F4F7FB"
                Width="340"
                Height="400"
                Padding="40"
                CornerRadius="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Effect="{StaticResource CardShadow}">
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="HR Management System"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}"
                           TextAlignment="Center"/>

                <TextBlock Text="Welcome back!"
                           Margin="0,5,0,20"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"
                           TextAlignment="Center"/>

                <!-- Username -->
                <Border CornerRadius="6" Background="#FAFAFA" BorderBrush="#D0D3D4" BorderThickness="1" Margin="0,10,0,0">
                    <TextBox x:Name="UsernameTextBox"
                             FontSize="15"
                             Height="45"
                             Padding="12"
                             Background="Transparent"
                             BorderThickness="0"/>
                </Border>

                <TextBlock Text="Username"
                           Foreground="#A8A8A8"
                           Margin="14,-38,0,0"
                           FontSize="14"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text.IsEmpty, ElementName=UsernameTextBox, Converter={StaticResource BoolToVisibilityConverter}}"/>


                <!-- Password -->
                <Border CornerRadius="6" Background="#FAFAFA" BorderBrush="#D0D3D4" BorderThickness="1" Margin="0,12,0,0">
                    <PasswordBox x:Name="PasswordBox"
                                 FontSize="15"
                                 Height="45"
                                 Padding="12"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                </Border>

                <TextBlock x:Name="PasswordPlaceholder"
                           Text="Password"
                           Foreground="#A8A8A8"
                           Margin="14,-38,0,0"
                           FontSize="14"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"/>


                <!-- Login Button -->
                <Button Content="Login"
        Background="{StaticResource PrimaryColor}"
        Foreground="White"
        FontSize="16"
        Height="45"
        Margin="0,22,0,0"
        BorderThickness="0"
        Click="LoginButton_Click">

    <Button.Style>
        <Style TargetType="Button">
            
            <!-- Mặc định -->
            <Setter Property="Background" Value="{StaticResource PrimaryColor}" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- Animation -->
                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C84F7"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F6FE3"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Style>
</Button>


                <!-- Error -->
                <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           FontSize="13"
                           Margin="0,12,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
