<Window x:Class="HRManagementApp.UI.Views.EditAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa tài khoản" 
        Height="720" Width="520" 
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Content="{TemplateBinding SelectionBoxItem}" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                                    <ToggleButton Grid.Column="1" Width="30" Background="Transparent" BorderThickness="0" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                        <TextBlock Text="▼" Foreground="#64748B" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" AllowsTransparency="True">
                                <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" MaxHeight="200">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" Margin="16">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Cập nhật thông tin" FontSize="24" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,8"/>
                <TextBlock Text="Chỉnh sửa thông tin tài khoản và phân quyền" FontSize="13" Foreground="#64748B"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tên đăng nhập" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtTenDangNhap" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Họ và tên" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtName" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Số điện thoại" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtSDT" Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Vai trò" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cboVaiTro" Style="{StaticResource ModernComboBox}" IsEditable="False"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Phòng ban" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                         <ComboBox x:Name="cboPhongBan" Style="{StaticResource ModernComboBox}" IsEditable="False"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Trạng thái" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <ComboBox x:Name="cboTrangThai" Style="{StaticResource ModernComboBox}" IsEditable="False">
                            <ComboBoxItem Content="Hoạt động"/>
                            <ComboBoxItem Content="Đã khóa"/>
                        </ComboBox>
                    </StackPanel>


                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Mật khẩu mới (Nếu muốn đổi)" FontSize="14" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,8"/>
                        <PasswordBox x:Name="pwdPassword" Padding="12,10" BorderBrush="#E5E7EB" BorderThickness="1"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Hủy bỏ" Width="100" Click="BtnCancel_Click" Background="#F1F5F9" Foreground="#64748B" Style="{StaticResource ModernButton}" Margin="0,0,12,0"/>
                <Button Grid.Column="2" Content="Lưu thay đổi" Width="140" Click="BtnSave_Click" Background="#2563EB" Foreground="White" Style="{StaticResource ModernButton}" Cursor="Hand"/>
            </Grid>
        </Grid>
    </Border>
</Window>