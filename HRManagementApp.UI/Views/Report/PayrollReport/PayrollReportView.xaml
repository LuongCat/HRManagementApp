                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"
                                    Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <DataGrid x:Name="dgPayroll"
                Grid.Row="2"
                  AutoGenerateColumns="False"
                IsReadOnly="True"
                  HeadersVisibility="Column"
                GridLinesVisibility="Horizontal"
                  Background="White"
                BorderThickness="1"
                BorderBrush="#E2E8F0"
