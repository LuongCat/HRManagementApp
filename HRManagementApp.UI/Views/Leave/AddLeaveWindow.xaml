<Window x:Class="HRManagementApp.UI.Views.Leave.AddLeaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tạo đơn nghỉ phép mới" 
        Height="550" Width="500"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Border Padding="25" Background="White" CornerRadius="10" Margin="10">
        
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="TẠO ĐƠN MỚI" FontSize="20" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center"/>
                <TextBlock Text="Điền thông tin đơn từ bên dưới" FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Nhân viên *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                <ComboBox x:Name="CbNhanVien" Height="40" Margin="0,0,0,15" 
                          DisplayMemberPath="HoTen" SelectedValuePath="MaNV"
                          Padding="10,0" VerticalContentAlignment="Center"
                          BorderBrush="#D1D5DB" BorderThickness="1"/>

                <TextBlock Text="Loại nghỉ *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                <ComboBox x:Name="CbLoaiDon" Height="40" Margin="0,0,0,15" 
                          DisplayMemberPath="TenLoaiDon" SelectedValuePath="MaLoaiDon"
                          Padding="10,0" VerticalContentAlignment="Center"
                          BorderBrush="#D1D5DB" BorderThickness="1"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Từ ngày *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                        <DatePicker x:Name="DpTuNgay" Height="40" BorderBrush="#D1D5DB"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Đến ngày *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                        <DatePicker x:Name="DpDenNgay" Height="40" BorderBrush="#D1D5DB"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Lý do nghỉ *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtLyDo" Height="80" TextWrapping="Wrap" 
                         Padding="10" VerticalContentAlignment="Top"
                         BorderBrush="#D1D5DB" BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Hủy bỏ" Click="BtnCancel_Click"
                        Background="White" Foreground="#374151" 
                        BorderBrush="#D1D5DB" BorderThickness="1"
                        Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Gửi đơn" Click="BtnSave_Click"
                        Background="#1F2937" Foreground="White" 
                        BorderThickness="0"
                        Padding="25,10" FontWeight="Bold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>