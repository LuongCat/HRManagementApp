                            <TextBlock Text="Payroll"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Name="LeaveBtn">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,10,0"/>
                            <TextBlock Text="Leave Management"/>
