<Window x:Class="HRManagementApp.UI.Views.RoleManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý vai trò &amp; Chức vụ" Height="800" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#4B5563"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="Control" x:Key="InputStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,0,0,15">
            <StackPanel>
                <TextBlock Text="QUẢN LÝ VAI TRÒ NHÂN VIÊN" FontSize="18" FontWeight="Bold" Foreground="#374151"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Nhân viên:" Foreground="#6B7280" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TxtEmployeeName" Text="Nguyễn Văn A - NV001" FontWeight="Bold" Foreground="#2563EB"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <ColumnDefinition Width="20"/> <ColumnDefinition Width="1.2*"/> </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB">
                <DataGrid x:Name="DgRoles"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          RowHeight="45"
                          SelectionChanged="DgRoles_SelectionChanged">
                    
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F3F4F6"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Chức vụ" Binding="{Binding ChucVu.TenCV}" Width="*" FontWeight="Medium"/>
                        <DataGridTemplateColumn Header="Loại" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="8,2" HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E0E7FF"/> <Style.Triggers>
                                                    <DataTrigger Binding="{Binding LoaiChucVu}" Value="Chính thức">
                                                        <Setter Property="Background" Value="#DCFCE7"/> </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding LoaiChucVu}" FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4338CA"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding LoaiChucVu}" Value="Chính thức">
                                                            <Setter Property="Foreground" Value="#166534"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="HS Lương" Binding="{Binding HeSoLuongCoBan, StringFormat=N2}" Width="80"/>
                        <DataGridTextColumn Header="HS Phụ cấp" Binding="{Binding HeSoPhuCapKiemNhiem, StringFormat=N2}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E5E7EB" Padding="20">
                <StackPanel>
                    <TextBlock Text="Thông tin chi tiết" FontSize="16" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Chức vụ" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CboChucVu" Style="{StaticResource InputStyle}" DisplayMemberPath="TenCV" SelectedValuePath="MaCV"/>

                    <TextBlock Text="Loại vai trò" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CboLoaiVaiTro" Style="{StaticResource InputStyle}">
                        <ComboBoxItem Content="Chính thức" IsSelected="True"/>
                        <ComboBoxItem Content="Kiêm nhiệm"/>
                    </ComboBox>

                    <TextBlock Text="Hệ số lương cơ bản" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtHeSoLuong" Style="{StaticResource InputStyle}" Text="1.00"/>

                    <TextBlock Text="Hệ số phụ cấp kiêm nhiệm" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtHeSoPhuCap" Style="{StaticResource InputStyle}" Text="0.00"/>

                    <TextBlock Text="Ghi chú" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtGhiChu" Style="{StaticResource InputStyle}" Height="60" TextWrapping="Wrap" VerticalContentAlignment="Top"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                        <Button x:Name="BtnAdd" Content="Thêm" Click="BtnAdd_Click" Width="80" Height="36" Margin="0,0,10,0" Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="BtnEdit" Content="Sửa" Click="BtnEdit_Click" Width="80" Height="36" Margin="0,0,10,0" Background="#F59E0B" Foreground="White" BorderThickness="0" Cursor="Hand" IsEnabled="False">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button x:Name="BtnDelete" Content="Xóa" Click="BtnDelete_Click" Width="80" Height="36" Margin="0,0,10,0" Background="#EF4444" Foreground="White" BorderThickness="0" Cursor="Hand" IsEnabled="False">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <Button Content="Làm mới form" Click="BtnClear_Click" Margin="0,15,0,0" Background="Transparent" Foreground="#6B7280" BorderThickness="0" Cursor="Hand"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>