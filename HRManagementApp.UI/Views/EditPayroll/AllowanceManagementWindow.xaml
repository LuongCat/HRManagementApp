<Window x:Class="HRManagementApp.UI.Views.AllowanceManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Phụ cấp cá nhân"
        Height="720"
        Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">

    <Window.Resources>
        <Style TargetType="TextBlock"
               x:Key="LabelStyle">
            <Setter Property="Foreground"
                    Value="#4B5563"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Margin"
                    Value="0,15,0,5"/>
        </Style>

        <Style TargetType="Control"
               x:Key="InputStyle">
            <Setter Property="Height"
                    Value="38"/>
            <Setter Property="Padding"
                    Value="8,0"/>
            <Setter Property="BorderBrush"
                    Value="#D1D5DB"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="VerticalContentAlignment"
                    Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="0,0,0,20"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Padding="0,0,0,15">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BÊN TRÁI: TIÊU ĐỀ + TÊN NHÂN VIÊN -->
                <StackPanel>
                    <TextBlock Text="QUẢN LÝ PHỤ CẤP NHÂN VIÊN"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#374151"/>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5,0,0">
                        <TextBlock Text="Nhân viên:"
                                   Foreground="#6B7280"
                                   Margin="0,0,5,0"/>
                        <TextBlock x:Name="TxtEmployeeName"
                                   Text="..."
                                   FontWeight="Bold"
                                   Foreground="#10B981"/>
                    </StackPanel>
                </StackPanel>

                <!-- BÊN PHẢI: NÚT -->
                <Button Grid.Column="1"
                        Content="Đánh giá khen thưởng"
                        Width="150"
                        Height="36"
                        VerticalAlignment="Center"
                        Background="#4444EF"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnOpenRewardEvaluation_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius"
                                    Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB">
                <Grid>
                    <DataGrid x:Name="DgAllowances"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              BorderThickness="0"
                              RowHeight="50"
                              SelectionChanged="DgAllowances_SelectionChanged">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background"
                                        Value="#F3F4F6"/>
                                <Setter Property="Foreground"
                                        Value="#6B7280"/>
                                <Setter Property="Padding"
                                        Value="10,0"/>
                                <Setter Property="Height"
                                        Value="40"/>
                                <Setter Property="FontWeight"
                                        Value="SemiBold"/>
                                <Setter Property="BorderThickness"
                                        Value="0,0,0,1"/>
                                <Setter Property="BorderBrush"
                                        Value="#E5E7EB"/>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background"
                                        Value="White"/>
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#ECFDF5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Setter Property="Padding"
                                        Value="10,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên khoản phụ cấp"
                                                Binding="{Binding TenPhuCap}"
                                                Width="*"
                                                FontWeight="Medium"/>

                            <DataGridTextColumn Header="Số tiền (VNĐ)"
                                                Binding="{Binding SoTien, StringFormat={}{0:N0}}"
                                                Width="120"
                                                FontWeight="Bold">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground"
                                                Value="#059669"/>
                                        <Setter Property="HorizontalAlignment"
                                                Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Thời gian áp dụng"
                                                    Width="180">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock FontSize="11"
                                                       Foreground="#6B7280">
                                            <Run Text="Từ: "/>
                                            <Run Text="{Binding ApDungTuNgay, StringFormat=dd/MM/yyyy}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="11"
                                                       Foreground="#6B7280">
                                            <Run Text="Đến: "/>
                                            <Run Text="{Binding ApDungDenNgay, StringFormat=dd/MM/yyyy, TargetNullValue='Vô thời hạn'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border x:Name="ReportPanel"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Padding="20"
                            Visibility="Collapsed"
                            VerticalAlignment="Stretch">

                        <StackPanel>
                            <TextBlock x:Name="TxtRewardEvaluation"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Margin="0,0,0,15"/>

                            <!-- BẢNG CHI TIẾT -->
                            <DataGrid x:Name="DgRewardEvaluation"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      Margin="0,0,0,15"
                                      GridLinesVisibility="None">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tiêu chí"
                                                        Binding="{Binding TieuChi}"
                                                        Width="*"/>
                                    <DataGridTextColumn Header="Số lần"
                                                        Binding="{Binding SoLan}"
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Điểm"
                                                        Binding="{Binding Diem}"
                                                        Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- TỔNG KẾT -->
                            <StackPanel Margin="0,10,0,0">
                                <TextBlock x:Name="TxtTongDiem"
                                           FontWeight="SemiBold"
                                           Margin="0,2"/>
                                <TextBlock x:Name="TxtThuongPhanTram"
                                           Margin="0,2"/>
                                <TextBlock x:Name="TxtLuongChinh"
                                           Margin="0,2"/>
                                <TextBlock x:Name="TxtTienThuong"
                                           Margin="0,2"/>
                            </StackPanel>

                            <!-- NÚT ĐÓNG -->
                            <Button Content="Đóng báo cáo"
                                    Width="150"
                                    Margin="0,20,0,0"
                                    Background="#EF4444"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Height="36"
                                    Click="BtnCloseReport_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="#E5E7EB"
                    Padding="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Padding="18">
                    <StackPanel>
                        <TextBlock Text="Chi tiết khoản phụ cấp"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#111827"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Tên phụ cấp"
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtTenPhuCap"
                                 Style="{StaticResource InputStyle}"/>

                        <TextBlock Text="Số tiền (VNĐ)"
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtSoTien"
                                 Style="{StaticResource InputStyle}"
                                 Text="0"/>

                        <TextBlock Text="Áp dụng từ ngày"
                                   Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="DpTuNgay"
                                    Height="38"
                                    VerticalContentAlignment="Center"/>

                        <TextBlock Text="Áp dụng đến ngày (Bỏ trống nếu vô thời hạn)"
                                   Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="DpDenNgay"
                                    Height="38"
                                    VerticalContentAlignment="Center"/>

                        <Border Background="#F0FDF4"
                                BorderBrush="#BBF7D0"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="10"
                                Margin="0,20,0,0">
                            <TextBlock Text="ℹ️ Nếu không chọn 'Đến ngày', khoản phụ cấp này sẽ được tính vĩnh viễn hàng tháng."
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="#15803D"/>
                        </Border>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,25,0,0">
                            <Button x:Name="BtnAdd"
                                    Content="Thêm"
                                    Click="BtnAdd_Click"
                                    Width="80"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button x:Name="BtnEdit"
                                    Content="Sửa"
                                    Click="BtnEdit_Click"
                                    Width="80"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    Background="#F59E0B"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button x:Name="BtnDelete"
                                    Content="Xóa"
                                    Click="BtnDelete_Click"
                                    Width="80"
                                    Height="36"
                                    Margin="0,0,10,0"
                                    Background="#EF4444"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    IsEnabled="False">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius"
                                                Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>

                        <Button Content="Làm mới form"
                                Click="BtnClear_Click"
                                Margin="0,15,0,0"
                                Background="Transparent"
                                Foreground="#6B7280"
                                BorderThickness="0"
                                Cursor="Hand"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>