<Window x:Class="HRManagementApp.UI.Views.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Height="420" Width="420"
        Title="Đổi Mật Khẩu"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White" CornerRadius="16" Padding="32"
            BorderBrush="#E2E8F0" BorderThickness="1">
        <StackPanel>
            
            <!-- Header -->
            <TextBlock Text="🔐 Đổi mật khẩu" FontSize="20" FontWeight="Bold" 
                       Foreground="#1E293B" Margin="0,0,0,24"/>

            <!-- Mật khẩu hiện tại -->
            <TextBlock Text="Mật khẩu hiện tại" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <PasswordBox x:Name="txtOldPass" Height="40" Padding="10" 
                         Background="#F8FAFC" BorderBrush="#CBD5E1"
                         BorderThickness="1" />

            <!-- Mật khẩu mới -->
            <TextBlock Text="Mật khẩu mới" FontWeight="SemiBold" Margin="0,16,0,4"/>
            <PasswordBox x:Name="txtNewPass" Height="40" Padding="10"
                         Background="#F8FAFC" BorderBrush="#CBD5E1"
                         BorderThickness="1"/>

            <!-- Nhập lại mật khẩu mới -->
            <TextBlock Text="Xác nhận mật khẩu mới" FontWeight="SemiBold" Margin="0,16,0,4"/>
            <PasswordBox x:Name="txtConfirmPass" Height="40" Padding="10"
                         Background="#F8FAFC" BorderBrush="#CBD5E1"
                         BorderThickness="1"/>

            <!-- Error -->
            <TextBlock x:Name="txtError"
                       Foreground="Red" FontSize="13"
                       Margin="0,10,0,0" Visibility="Collapsed"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,28,0,0" >
                <Button Content="Hủy" Width="90" Margin="0,0,12,0"
                        Background="Transparent" Foreground="#475569"
                        BorderBrush="#CBD5E1" BorderThickness="1"
                        Click="BtnCancel_Click"/>

                <Button Content="Xác nhận" Width="110"
                        Background="#2563EB" Foreground="White"
                        BorderThickness="0" Click="BtnConfirm_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
