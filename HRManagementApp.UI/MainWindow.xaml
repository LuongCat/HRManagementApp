                            <TextBlock Text="Settings"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Logout Button -->
                <Button Style="{StaticResource SidebarButtonStyle}" Name="LogoutBtn" VerticalAlignment="Bottom" Margin="0,50,0,20" Background="{StaticResource SecondaryColor}">
