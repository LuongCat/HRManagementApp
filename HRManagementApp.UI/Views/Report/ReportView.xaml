<UserControl x:Class="HRManagementApp.UI.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="1200">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PrimaryColor"
                         Color="#2E86AB"/>
        <SolidColorBrush x:Key="SecondaryColor"
                         Color="#A23B72"/>
        <SolidColorBrush x:Key="AccentColor"
                         Color="#F18F01"/>
        <SolidColorBrush x:Key="BackgroundColor"
                         Color="#F5F7FA"/>
        <SolidColorBrush x:Key="CardColor"
                         Color="White"/>
        <SolidColorBrush x:Key="TextPrimary"
                         Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary"
                         Color="#7F8C8D"/>

        <Style x:Key="CardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius"
                    Value="8"/>
            <Setter Property="Margin"
                    Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray"
                                      Direction="270"
                                      ShadowDepth="2"
                                      BlurRadius="8"
                                      Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Topbar -->
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,15"
                BorderBrush="#E5E5E5"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="Reports"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Generate and export HR reports"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- TOP MENU -->
        <Border Grid.Row="1"
                Background="White"
                Padding="10">
            <StackPanel x:Name="ReportMenuPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <ToggleButton x:Name="DefaultReport"
                              Content="Attendance"
                              Tag="Attendance"
                              Checked="ReportMenu_Checked"
                              Style="{StaticResource MenuTabButtonStyle}"
                              FontSize="16"
                              Width="130"/>

                <ToggleButton Content="Department"
                              Tag="Department"
                              Checked="ReportMenu_Checked"
                              Style="{StaticResource MenuTabButtonStyle}"
                              FontSize="16"
                              Width="130"/>

                <ToggleButton Content="Employee"
                              Tag="Employee"
                              Checked="ReportMenu_Checked"
                              Style="{StaticResource MenuTabButtonStyle}"
                              FontSize="16"
                              Width="130"/>

                <ToggleButton Content="Leave"
                              Tag="Leave"
                              Checked="ReportMenu_Checked"
                              Style="{StaticResource MenuTabButtonStyle}"
                              FontSize="16"
                              Width="130"/>

                <ToggleButton Content="Payroll"
                              Tag="Payroll"
                              Checked="ReportMenu_Checked"
                              Style="{StaticResource MenuTabButtonStyle}"
                              FontSize="16"
                              Width="130"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Where report UI loads -->
                <Border Background="#FFFFFF"
                        CornerRadius="8"
                        BorderBrush="#E5E5E5"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0 0 0 15">
                    <ContentControl x:Name="ReportContentArea"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
