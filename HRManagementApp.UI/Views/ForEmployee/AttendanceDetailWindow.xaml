<Window x:Class="HRManagementApp.UI.Views.AttendanceDetailWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết trong ngày" Height="300" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" Text="Chi tiết ngày 28/11/2025" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <DataGrid x:Name="dgDetails" Grid.Row="1" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Giờ vào" Binding="{Binding GioVao}" Width="*"/>
                <DataGridTextColumn Header="Giờ ra" Binding="{Binding GioRa}" Width="*"/>
                <DataGridTextColumn Header="Thời gian làm" Binding="{Binding ThoiGianLam}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>