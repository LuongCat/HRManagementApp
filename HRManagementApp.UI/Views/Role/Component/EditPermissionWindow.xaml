<Window x:Class="HRManagementApp.UI.Views.EditPermissionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phân quyền vai trò" Height="600" Width="550"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="txtTitle" Text="Phân quyền: ..." FontSize="20" FontWeight="Bold" Foreground="#1E293B"/>
            <TextBlock Text="Tích chọn chức năng để cấp quyền truy cập cơ bản (Xem)." FontSize="13" Foreground="#64748B" Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1" Padding="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                <ItemsControl x:Name="icPermissions">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,12" CornerRadius="8" Background="White" BorderThickness="1" Padding="15,12">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding MainPermission.IsSelected}" Value="True">
                                                <Setter Property="BorderBrush" Value="#2563EB"/>
                                                <Setter Property="Background" Value="#F8FAFC"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0" 
                                              IsChecked="{Binding MainPermission.IsSelected}"
                                              VerticalAlignment="Center" Cursor="Hand">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>

                                    <StackPanel Grid.Column="1" Margin="15,0">
                                        <TextBlock Text="{Binding TenModule}" FontWeight="Bold" FontSize="15" Foreground="#1E293B"/>
                                        <TextBlock Text="{Binding MainPermission.MoTaHienThi}" FontSize="12" Foreground="#64748B"/>
                                    </StackPanel>

                                    <Button Grid.Column="2" 
                                            Content="Chi tiết ⚙"
                                            Click="BtnDetail_Click"
                                            Tag="{Binding}"
                                            Background="Transparent" BorderBrush="#CBD5E1" BorderThickness="1"
                                            Foreground="#2563EB" FontSize="13" Padding="10,5" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                                        </Button.Resources>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DetailedPermissions.Count}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Đóng" IsCancel="True" Grid.Column="0" Background="Transparent" Foreground="#64748B" BorderThickness="0" FontSize="14" FontWeight="SemiBold" Cursor="Hand"/>
            <Button Content="Lưu thay đổi" Click="BtnSave_Click" Grid.Column="2" Background="#1E293B" Foreground="White" BorderThickness="0" FontSize="14" FontWeight="SemiBold" Cursor="Hand" Padding="24,10">
                <Button.Resources>
                    <Style TargetType="Border"><Setter Property="CornerRadius" Value="8"/></Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>