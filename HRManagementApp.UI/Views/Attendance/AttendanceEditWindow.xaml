<Window x:Class="HRManagementApp.UI.Views.AttendanceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cập nhật chấm công" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F9FAFB">
    
    <Border Padding="20" Background="White" Margin="10" CornerRadius="8">
        <StackPanel>
            <TextBlock Text="Thông tin chấm công" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Mã Nhân Viên:" Foreground="#6B7280" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMaNV" Height="35" Padding="5" VerticalContentAlignment="Center"/>

            <TextBlock Text="Ngày:" Foreground="#6B7280" Margin="0,10,0,5"/>
            <DatePicker x:Name="dpNgay" Height="35" VerticalContentAlignment="Center"/>

            <TextBlock Text="Giờ Vào (hh:mm):" Foreground="#6B7280" Margin="0,10,0,5"/>
            <TextBox x:Name="txtGioVao" Height="35" Padding="5" VerticalContentAlignment="Center" />

            <TextBlock Text="Giờ Ra (hh:mm):" Foreground="#6B7280" Margin="0,10,0,5"/>
            <TextBox x:Name="txtGioRa" Height="35" Padding="5" VerticalContentAlignment="Center" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="Hủy" Click="Cancel_Click" Width="80" Height="35" Background="Transparent" BorderThickness="0"/>
                <Button Content="Lưu lại" Click="Save_Click" Width="100" Height="35" 
                        Background="#2563EB" Foreground="White" FontWeight="SemiBold" Margin="10,0,0,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>