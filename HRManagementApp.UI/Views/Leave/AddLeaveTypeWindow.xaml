<Window x:Class="HRManagementApp.UI.Views.Leave.AddLeaveTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm loại đơn mới" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F5F7FA">

    <Border Padding="25" Background="White" CornerRadius="10" Margin="10">
        

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="THÊM LOẠI ĐƠN" FontSize="20" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center"/>
                <TextBlock Text="Tạo loại đơn nghỉ phép mới" FontSize="13" Foreground="#6B7280" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Tên loại đơn *" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtTenLoai" Height="40" Margin="0,0,0,15" 
                         Padding="10" VerticalContentAlignment="Center"
                         BorderBrush="#D1D5DB" BorderThickness="1"/>

                <TextBlock Text="Mô tả" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtMoTa" Height="80" TextWrapping="Wrap" 
                         Padding="10" VerticalContentAlignment="Top"
                         BorderBrush="#D1D5DB" BorderThickness="1"/>
                
                </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Hủy bỏ" Click="BtnCancel_Click"
                        Background="White" Foreground="#374151" 
                        BorderBrush="#D1D5DB" BorderThickness="1"
                        Padding="20,10" Margin="0,0,10,0" FontWeight="SemiBold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                    </Button.Resources>
                </Button>

                <Button Content="Lưu lại" Click="BtnSave_Click"
                        Background="#1F2937" Foreground="White" 
                        BorderThickness="0"
                        Padding="25,10" FontWeight="Bold" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border"><Setter Property="CornerRadius" Value="6"/></Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>