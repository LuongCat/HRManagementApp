<UserControl x:Class="HRManagementApp.UI.Views.MyPayslipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1000"
             Background="#F3F4F6">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.03" BlurRadius="10" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MoneyTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25">
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Phiếu Lương Cá Nhân" FontSize="24" FontWeight="Bold" Foreground="#1F2937"/>
                    <TextBlock Text="Chi tiết thu nhập và các khoản khấu trừ" FontSize="14" Foreground="#6B7280" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Kỳ lương:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#4B5563" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cboMonth" Width="150" Height="35" 
                              Padding="10,0" VerticalContentAlignment="Center"
                              SelectionChanged="CboMonth_SelectionChanged" Cursor="Hand"
                              Background="White" BorderBrush="#D1D5DB">
                    </ComboBox>
                </StackPanel>
            </Grid>

            <Grid x:Name="pnlPayslipContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                    <RowDefinition Height="Auto"/> 
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="60" Height="60" CornerRadius="30" Background="#DBEAFE" Margin="0,0,20,0">
                            <TextBlock Text="ME" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="#2563EB" FontSize="20"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtHoTen" Text="{Binding HoTen}" FontSize="20" FontWeight="Bold" Foreground="#1F2937"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock x:Name="TxtMaNV" Text="{Binding MaNV, StringFormat='Mã NV: {0}'}" FontSize="14" Foreground="#6B7280" Margin="0,0,20,0"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Ngày công: " FontSize="14" Foreground="#6B7280"/>
                                    <TextBlock x:Name="TxtNgayCong" Text="{Binding NgayCong}" FontSize="14" FontWeight="Bold" Foreground="#059669"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        
                        <Border Grid.Column="2" Background="#EFF6FF" CornerRadius="8" Padding="15,5">
                            <StackPanel>
                                <TextBlock Text="Kỳ lương" FontSize="12" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="TxtThangHienTai" Text="{Binding ThangNam}" FontSize="18" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/> 
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/> 
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="💼 Lương cơ bản &amp; Chức vụ" Style="{StaticResource SectionHeaderStyle}" Foreground="#059669"/>
                                
                                <DataGrid x:Name="DgRoles" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" BorderThickness="0" GridLinesVisibility="Horizontal" Background="White" RowHeight="40">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Chức vụ" Binding="{Binding ChucVu.TenCV}" Width="*"/>
                                        <DataGridTextColumn Header="Luong CB" Binding="{Binding ChucVu.LuongCB}" Width="80"/>
                                        <DataGridTextColumn Header="Kiem Nhiem" Binding="{Binding ChucVu.TienPhuCapKiemNhiem}" Width="80"/>
                                        <DataGridTextColumn Header="HS Lương" Binding="{Binding HeSoLuongCoBan}" Width="60"/>
                                        <DataGridTextColumn Header="HS KN" Binding="{Binding HeSoPhuCapKiemNhiem}" Width="60"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <Separator Margin="0,15"/>
                                
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="Tổng lương hệ số:" Foreground="#4B5563"/>
                                    <TextBlock x:Name="TxtTongLuongHeSo" Text="{Binding TongLuongHeSo, StringFormat={}{0:N0} VNĐ}" Style="{StaticResource MoneyTextStyle}" DockPanel.Dock="Right" Foreground="#059669"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="💰 Các khoản phụ cấp" Style="{StaticResource SectionHeaderStyle}" Foreground="#059669"/>

                                <DataGrid x:Name="DgAllowances" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="None" BorderThickness="0" GridLinesVisibility="Horizontal" Background="White" RowHeight="35" MaxHeight="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding TenPhuCap}" Width="*"/>
                                        <DataGridTextColumn Binding="{Binding SoTien, StringFormat={}{0:N0}}" Width="Auto" FontWeight="SemiBold"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <Separator Margin="0,15"/>
                                
                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="Tổng phụ cấp:" Foreground="#4B5563"/>
                                    <TextBlock x:Name="TxtTongPhuCap" Text="{Binding TongPhuCap, StringFormat={}{0:N0} VNĐ}" Style="{StaticResource MoneyTextStyle}" DockPanel.Dock="Right" Foreground="#059669"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="📊 Thuế thu nhập" Style="{StaticResource SectionHeaderStyle}" Foreground="#D97706"/>

                                <DataGrid x:Name="DgTaxes" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="None" BorderThickness="0" GridLinesVisibility="Horizontal" Background="White" RowHeight="35" MaxHeight="150">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding TenThue}" Width="*"/>
                                        <DataGridTextColumn Binding="{Binding SoTien, StringFormat={}{0:N0}}" Width="Auto" FontWeight="SemiBold" Foreground="#D97706"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Separator Margin="0,15"/>

                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="Tổng thuế:" Foreground="#4B5563"/>
                                    <TextBlock x:Name="TxtTongThue" Text="{Binding TongThue, StringFormat={}{0:N0} VNĐ}" Style="{StaticResource MoneyTextStyle}" DockPanel.Dock="Right" Foreground="#D97706"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="📉 Khấu trừ &amp; Phạt" Style="{StaticResource SectionHeaderStyle}" Foreground="#DC2626"/>

                                <DataGrid x:Name="DgDeductions" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="None" BorderThickness="0" GridLinesVisibility="Horizontal" Background="White" RowHeight="35" MaxHeight="150">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding TenKhoanTru}" Width="*"/>
                                        <DataGridTextColumn Binding="{Binding SoTien, StringFormat={}{0:N0}}" Width="Auto" FontWeight="SemiBold" Foreground="#DC2626"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <Separator Margin="0,15"/>

                                <DockPanel LastChildFill="False">
                                    <TextBlock Text="Tổng phạt/trừ:" Foreground="#4B5563"/>
                                    <TextBlock x:Name="TxtTongPhat" Text="{Binding TongPhat, StringFormat={}{0:N0} VNĐ}" Style="{StaticResource MoneyTextStyle}" DockPanel.Dock="Right" Foreground="#DC2626"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </Grid>

                <Border Grid.Row="2" Background="#2563EB" CornerRadius="12" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="THỰC LÃNH (NET PAY)" FontSize="14" Foreground="#BFDBFE" FontWeight="SemiBold"/>
                            <TextBlock Text="(Thu nhập - Các khoản giảm trừ)" FontSize="12" Foreground="#93C5FD" FontStyle="Italic"/>
                            
                            <Border x:Name="badgeStatus" Background="White" CornerRadius="4" HorizontalAlignment="Left" Padding="8,2" Margin="0,8,0,0">
                                <TextBlock Text="{Binding TrangThai}" FontSize="12" FontWeight="Bold" Foreground="#2563EB"/>
                            </Border>
                        </StackPanel>

                        <TextBlock x:Name="TxtThucNhan" Grid.Column="1" 
                                   Text="{Binding ThucLanh, StringFormat={}{0:N0} VNĐ}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

            </Grid>
            
            <TextBlock x:Name="txtNoData" Text="Vui lòng chọn kỳ lương để xem chi tiết." 
                       FontSize="16" Foreground="#9CA3AF" HorizontalAlignment="Center" 
                       Margin="0,50,0,0" Visibility="Collapsed"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>