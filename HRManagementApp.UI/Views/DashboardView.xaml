<UserControl x:Class="HRManagementApp.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Color Definitions -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2E86AB"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#A23B72"/>
        <SolidColorBrush x:Key="AccentColor" Color="#F18F01"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="SidebarColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="CardColor" Color="White"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#7F8C8D"/>

        <!-- Button Styles -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#34495E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1ABC9C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2574A9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,15"
                BorderBrush="#E5E5E5"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="Welcome back! Here's what's happening today."
                               FontSize="14"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Add Employee"
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="0,0,10,0"/>
                    <TextBlock Text="ðŸ””"
                               FontSize="20"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                    <TextBlock Text="Today: September 19, 2025"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Dashboard Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">

                <!-- Stats Cards Row -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Employees Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="10">
                                <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Right" Opacity="0.3"/>
                                <StackPanel>
                                    <TextBlock Text="Total Employees" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Text="0" x:Name="TxtTotalEmployee" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,5,0,0"/>
                                    <TextBlock Text="0 joined this month" x:Name="TxtJoinedThisMonth" FontSize="10" Foreground="#27AE60" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Present Today Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="10">
                                <TextBlock Text="âœ…" FontSize="32" HorizontalAlignment="Right" Opacity="0.3"/>
                                <StackPanel>
                                    <TextBlock Text="Present Today" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock x:Name="TxtPresentToday" FontSize="28" FontWeight="Bold" Foreground="#27AE60" Margin="0,5,0,0"/>
                                    <TextBlock x:Name="TxtAttendanceRate" FontSize="10" Foreground="{StaticResource TextSecondary}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- On Leave Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="10">
                                <TextBlock Text="ðŸ–ï¸" FontSize="32" HorizontalAlignment="Right" Opacity="0.3"/>
                                <StackPanel>
                                    <TextBlock Text="On Leave" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Text="15" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,5,0,0"/>
                                    <TextBlock Text="3 pending approvals" FontSize="10" Foreground="#E74C3C" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Payroll Card -->
                    <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="10">
                                <TextBlock Text="ðŸ’°" FontSize="32" HorizontalAlignment="Right" Opacity="0.3"/>
                                <StackPanel>
                                    <TextBlock Text="Monthly Payroll" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBlock Text="$428K" FontSize="28" FontWeight="Bold" Foreground="{StaticResource SecondaryColor}" Margin="0,5,0,0"/>
                                    <TextBlock Text="Due in 5 days" FontSize="10" Foreground="{StaticResource AccentColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recent Activities and Quick Actions -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Recent Activities -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="10">
                        <StackPanel Margin="0,0,0,10">
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Recent Activities" FontSize="16" FontWeight="SemiBold"/>
                                <Button Content="View All" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Right" Padding="10,5"/>
                            </Grid>

                            <StackPanel>
                                <!-- Activity Item 1 -->
                                <Border BorderBrush="#E5E5E5" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="8" Height="8" Fill="#27AE60" VerticalAlignment="Top" Margin="0,5,15,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="John Smith submitted a leave request" FontWeight="Medium"/>
                                            <TextBlock Text="Annual Leave - Oct 15-20, 2025" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="2 min ago" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                <!-- Activity Item 2 -->
                                <Border BorderBrush="#E5E5E5" BorderThickness="0,0,0,1" Padding="0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="8" Height="8" Fill="{StaticResource PrimaryColor}" VerticalAlignment="Top" Margin="0,5,15,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="New employee Sarah Johnson onboarded" FontWeight="Medium"/>
                                            <TextBlock Text="Marketing Department - ID: EMP2025-248" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="1 hour ago" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>

                                <!-- Activity Item 3 -->
                                <Border Padding="0,10,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Ellipse Grid.Column="0" Width="8" Height="8" Fill="{StaticResource AccentColor}" VerticalAlignment="Top" Margin="0,5,15,0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Payroll processed for September 2025" FontWeight="Medium"/>
                                            <TextBlock Text="247 employees - Total: $428,500" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" Text="3 hours ago" FontSize="11" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Top"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Actions -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Padding="10">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Quick Actions" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                            <Button Content="Add New Employee" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                            <Button Content="Process Payroll" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,10" Background="{StaticResource AccentColor}"/>
                            <Button Content="Approve Leave Requests" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,10" Background="{StaticResource SecondaryColor}"/>
                            <Button Content="Generate Reports" Style="{StaticResource ActionButtonStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,20" Background="#27AE60"/>

                            <!-- Calendar Widget -->
                            <Border BorderBrush="#E5E5E5" BorderThickness="1" CornerRadius="4" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="September 2025" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <Calendar Name="QuickCalendar" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
